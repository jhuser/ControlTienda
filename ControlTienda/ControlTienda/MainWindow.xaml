<Window x:Class="ControlTienda.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ControlTienda"  
    mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="350">
    <StackPanel>
        <TextBox x:Name="tbUserName" Height="40" Margin="20,60,20,10" VerticalAlignment="Center"/>
        <PasswordBox
  x:Name="tbPassword"
  materialDesign:HintAssist.Hint="Floating Password"
  materialDesign:HintAssist.Foreground="Green"
  materialDesign:TextFieldAssist.UnderlineBrush="Green"
  Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" />
        <Button x:Name="btnaceptar" Height="25" Content="Aceptar" FontWeight="Bold" Margin="55,25,55,10" VerticalAlignment="Center" Click="Btnaceptar_Click"/>
        <Button x:Name="btnCancelar" Height="25" Content="Cancelar" FontWeight="Bold" Margin="55,25,55,10" VerticalAlignment="Center" Click="btnCancelar_Click"/>
    </StackPanel>
</Window>
